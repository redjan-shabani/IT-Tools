<UserControl x:Class="Infokom.Tools.Apps.WPF.WpfApp.TokenGenerator"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:local="clr-namespace:Infokom.Tools.Apps.WPF.WpfApp"
	Width="640" MinWidth="640" MaxWidth="640"
	Height="480" MinHeight="480" MaxHeight="480"
	>

	<UserControl.DataContext>
		<local:TokenGeneratorViewModel />
	</UserControl.DataContext>

	<md:Card Background="LightGray">
		<DockPanel LastChildFill="True">
			<StackPanel DockPanel.Dock="Top"  Orientation="Vertical" Margin="5">
				
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
					<StackPanel Orientation="Vertical" Margin="5">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
							<TextBlock Margin="5">Uppercase (ABC...)</TextBlock>
							<ToggleButton Margin="5" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding WithUppercase}"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
							<TextBlock Margin="5">Lowercase (abc...)</TextBlock>
							<ToggleButton Margin="5" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding WithLowercase}" />
						</StackPanel>
					</StackPanel>
					<StackPanel Orientation="Vertical" Margin="5">
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
							<TextBlock Margin="5">Numbers (123...)</TextBlock>
							<ToggleButton Margin="5" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding WithNumbers}"/>
						</StackPanel>
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
							<TextBlock Margin="5">Symbols (!-;...)</TextBlock>
							<ToggleButton Margin="5" Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding WithSymbols}"/>
						</StackPanel>
					</StackPanel>
				</StackPanel>

				<DockPanel LastChildFill="True" Margin="5">
					<TextBlock Margin="5" Text="{Binding Length, StringFormat=Length ({0})}"></TextBlock>
					<Slider Margin="5" Minimum="0" Maximum="512" SmallChange="1" LargeChange="16" Value="{Binding Length}"></Slider>
				</DockPanel>
			</StackPanel>


			<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
				<Button Margin="5" Command="{Binding CopyCommand}">
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<md:PackIcon Kind="ContentCopy" VerticalAlignment="Center"></md:PackIcon>
						<TextBlock VerticalAlignment="Center">Copy</TextBlock>
					</StackPanel>
				</Button>
				<Button Margin="5" Command="{Binding RefreshCommand}">
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<md:PackIcon Kind="Refresh" VerticalAlignment="Center"></md:PackIcon>
						<TextBlock VerticalAlignment="Center">Refresh</TextBlock>
					</StackPanel>
				</Button>
			</StackPanel>

			<TextBox Margin="5" TextAlignment="Center" FontFamily="Cascadia Mono" Style="{StaticResource MaterialDesignOutlinedTextBox}" TextWrapping="Wrap" Text="{Binding Token}"/>
		</DockPanel>
	</md:Card>
</UserControl>
