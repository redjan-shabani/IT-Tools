<UserControl x:Class="Infokom.Tools.Apps.WPF.WpfApp.DateTimeConverter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
		xmlns:local="clr-namespace:Infokom.Tools.Apps.WPF.WpfApp"
		Width="640" MinWidth="640" MaxWidth="640"
		Background="LightGray">

	<UserControl.DataContext>
		<local:DateTimeConverterViewModel></local:DateTimeConverterViewModel>
	</UserControl.DataContext>
	<StackPanel Orientation="Vertical">


		<Grid Margin="5">
			<Grid.RowDefinitions>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
				<RowDefinition></RowDefinition>
               </Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width="auto"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<TextBox Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="ISO 8601" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding ISO8601}"/>
			<Button Grid.Row="0" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}"><md:PackIcon Kind="ContentCopy"></md:PackIcon></Button>

			<TextBox Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="ISO 9075" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding ISO9075}"/>
			<Button Grid.Row="1" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>

			<TextBox Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="RFC 3339" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding RFC3339}"/>
			<Button Grid.Row="2" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>

			<TextBox Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="RFC 7231" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding RFC7231}"/>
			<Button Grid.Row="3" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>

			<TextBox Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="Timestamp" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding Timestamp}"/>
			<Button Grid.Row="4" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>

			<TextBox Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="UNIX Timestamp" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding UnixTimestamp}"/>
			<Button Grid.Row="5" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>

			<TextBox Grid.Row="6" Grid.Column="0" Margin="5" VerticalAlignment="Center" md:HintAssist.Hint="Excel Date/Time" Style="{StaticResource MaterialDesignFloatingHintTextBox}"	Text="{Binding ExcelDateTime}"/>
			<Button Grid.Row="6" Grid.Column="1" Margin="5" Style="{StaticResource MaterialDesignFlatButton}">
				<md:PackIcon Kind="ContentCopy"></md:PackIcon>
			</Button>
		</Grid>
     </StackPanel>
</UserControl>
