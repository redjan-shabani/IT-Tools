<UserControl x:Class="Infokom.Tools.Apps.WPF.WpfApp.Decryptor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
			xmlns:local="clr-namespace:Infokom.Tools.Apps.WPF.WpfApp"
			Width="640" MinWidth="640" MaxWidth="640"
			Background="LightGray">

	<UserControl.DataContext>
		<local:DecryptorViewModel/>
	</UserControl.DataContext>

	<DockPanel Grid.Row="0" Grid.Column="0" LastChildFill="True">
		<StackPanel DockPanel.Dock="Top" Orientation="Vertical">
			<TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" Style="{StaticResource MaterialDesignHeadline6TextBlock}">DECRYPT</TextBlock>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition></ColumnDefinition>
					<ColumnDefinition></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<PasswordBox Grid.Column="0" Margin="5" md:HintAssist.Hint="Password" md:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}"
	md:PasswordBoxAssist.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

				<ComboBox Grid.Column="1" Margin="5" md:HintAssist.Hint="Algorithm" Style="{StaticResource MaterialDesignOutlinedComboBox}"
					ItemsSource="{Binding AvailableAlgorithms}" SelectedItem="{Binding SelectedAlgorithm, UpdateSourceTrigger=PropertyChanged}"/>
			</Grid>
		</StackPanel>

		<StackPanel>
			<StackPanel>
				

				<TextBox Margin="5" md:HintAssist.Hint="Encrypted Text" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" MinLines="5" MaxLines="5" Style="{StaticResource MaterialDesignOutlinedTextBox}"
					Text="{Binding EncryptedText, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False"/>

				<TextBox Margin="5" md:HintAssist.Hint="Decrypted Text" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" MinLines="5" MaxLines="5" Style="{StaticResource MaterialDesignOutlinedTextBox}" 
					Text="{Binding DecryptedText, UpdateSourceTrigger=Default}" IsReadOnly="True"/>
			</StackPanel>

		</StackPanel>
	</DockPanel>
</UserControl>
