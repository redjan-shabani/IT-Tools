<UserControl x:Class="Infokom.Tools.Apps.WPF.WpfApp.HashText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Infokom.Tools.Apps.WPF.WpfApp"
             Width="640" MinWidth="640" MaxWidth="640"
		   Background="LightGray">
	<StackPanel Orientation="Vertical" Margin="5">

		<TextBox Margin="5" MinLines="5" MaxLines="5" TextWrapping="Wrap" AcceptsReturn="True" md:HintAssist.Hint="Text to hash" md:HintAssist.IsFloating="True" VerticalAlignment="Top" Text="HELLO" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

		<ComboBox Margin="5" md:HintAssist.Hint="Digest encoding" md:TextFieldAssist.HasClearButton="True" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
			<ComboBoxItem Content="Binary (base 2)"></ComboBoxItem>
			<ComboBoxItem Content="Hexadecimal (base 16)"></ComboBoxItem>
			<ComboBoxItem Content="Base64 (base 64)"></ComboBoxItem>
			<ComboBoxItem Content="Base64url (base 64 with url safe chars)"></ComboBoxItem>
          </ComboBox>

		<Separator></Separator>

		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="MD5" md:HintAssist.IsFloating="True" Text="HELLO" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA1" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA256" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA224" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA512" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA384" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="SHA3" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
		<TextBox Margin="5" MaxLines="1" TextWrapping="NoWrap" md:HintAssist.Hint="RIPEMD160" md:HintAssist.IsFloating="True" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />


	</StackPanel>
</UserControl>
